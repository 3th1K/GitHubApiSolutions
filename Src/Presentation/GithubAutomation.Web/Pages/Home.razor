@page "/"
@page "/home"

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Welcome to GitHub Automation Suite</h1>
        <p class="lead text-secondary">Streamline your GitHub workflow with powerful automation tools at your fingertips.</p>
        <a href="/contribution" class="btn btn-lg btn-primary mt-3">Get Started</a>
    </div>

    <!-- Features Section -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-file-code text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Automate Contributions</h5>
                    <p class="card-text">Save time and effort by automating your GitHub contributions seamlessly.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-tools text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Repository Management</h5>
                    <p class="card-text">Organize and manage your GitHub repositories with ease using our tools.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-bar-chart-line text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Insights & Analytics</h5>
                    <p class="card-text">Gain valuable insights into your contributions and repository performance.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="text-center mt-5">
